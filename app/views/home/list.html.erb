<div class="con_main">
  <section>
    <table class="list">
      <tbody>
      <% @goods_list.each_with_index  do |goods,index| %>
          <% if index % 2 == 0 %>
              <tr>
                <td><div><a href="/home/detail?id=<%= goods['id']%>&ids=<%= @ids%>"><img src="<%= goods['photo_url'] %>" /></a></div></td>
          <% else %>
              <td class="sort"><div><a href="/home/detail?id=<%= goods['id']%>&ids=<%= @ids%>"><img src="<%= goods['photo_url'] %>" /></a></div></td>
              </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>

    <div class="page">
      <div class="up_page left disables">
        <% if @page == 1 %>
            <% if @pre_brand_id && @pre_brand_id != -1 %>
                <a href='/home/list?id=<%= (@pre_brand_id)%>'>上一个品牌</a>
            <% else %>
                <a>没有了</a>
            <% end %>
        <% else %>
            <a href='/home/list?id=<%= @id%>&page=<%= (@page-1)%>'>上一页</a>
        <% end %>

      </div>
      <div class="down_page right">
        <% if @goods_list.length < 14 %>
            <% if @next_brand_id && @next_brand_id != -1 %>
                <a href='/home/list?id=<%= (@next_brand_id)%>'>下一个品牌</a>
            <% else %>
                <a>没有了</a>
            <% end %>

        <% else %>
            <a href='/home/list?id=<%= (@id)%>&page=<%= (@page+1)%>'>下一页</a>
        <% end %>

      </div>
      <div style="clear: both;"/>
    </div>

  </section>
  <div class="down"><a href="http://www.shiyimm.com">下载手机客户端</a></div>
</div>

