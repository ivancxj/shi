<div class="con_main">
  <section>
    <% @goods_list.each  do |goods| %>
        <div class="product">
          <a href="/home/detail?id=<%= goods['id']%>&ids=<%= @ids%>">
            <div class="img_wrap">
              <img src="<%= goods['photo_url'] %>">
            </div>
          </a>
        </div>
    <% end %>

    <div class="page">
      <div class="up_page left disables">
        <% if @page <= 1 %>
            <a>上一个品牌</a>
        <% else %>
            <a href='/home/list?id=<%= @id%>&page=<%= (@page-1)%>'>上一页</a>
        <% end %>

      </div>
      <div class="down_page right">
        <% if @goods_list.length < 14 %>
            <a>下一个品牌</a>
        <% else %>
            <a href='/home/list?id=<%= (@id)%>&page=<%= (@page+1)%>'>下一页</a>
        <% end %>

      </div>
      <div style="clear: both;"/>
    </div>

  </section>
  <div class="down"><a href="http://www.shiyimm.com">下载手机客户端</a></div>
</div>

