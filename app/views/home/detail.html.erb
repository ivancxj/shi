<article class="gallery">
  <div id="wrapper" class="wrapper">
    <div id="pageScroller">
      <a class="pic">
        <img src="<%= @goods['detail_photo'] %>" width="100%">
      </a>
      <% @goods['goods_albums'].each do |album| %>
          <a class="pic" data-src="<%= album['photo'] %>">
          </a>
      <% end %>
    </div>
  </div>
  <div class="trigger">
    <% if @pre_id %>
        <a href="/home/detail?id=<%= @pre_id %>" class="prev"><img src="<%= asset_path('prev.png') %>" width="40px" height="40px"/></a>
    <% end %>

    <% if @next_id %>
        <a href="/home/detail?id=<%= @next_id %>" class="next"><img src="<%= asset_path('next.png') %>" width="40px" height="40px"/></a>
    <% end %>

  </div>

  <div class="page">
    <!--<span class="selected">1</span>-->
    <div class="slide margin5 ">
      <li></li>
      <% @goods["goods_albums"].each_with_index do |album, index| %>
          <% if index < 8 %>
              <li></li>
          <% end %>
      <% end %>
    </div>

    <div class="extra">
      <p class="price">
        <del>市场价: ￥<%= @goods["old_price"] %></del>
        <b>MM价: ￥<%= @goods["sale_price"] %></b></p>
      <p class="go-order">
        <button class="button pink">点击体验试穿</button>
      </p>
    </div>
  </div>
</article>

