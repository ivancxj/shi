<script>

    var scroll;

    (function () {

        var click_event = DeviceInfo.browser == 'ie' ? 'click' : 'tap';

        $(".trigger a").bind(click_event, function (e) {
            e.preventDefault();
            e.stopPropagation();
            var $this = $(this);
            var goods_id = $this.data('src')
            $.getJSON('/home/next?id=' + goods_id, function (data) {

                var state = { //这里可以是你想给浏览器的一个State对象，为后面的StateEvent做准备。
                    title : "HTML 5 History API simple demo",
                    url : "http://www.baidu.com"
                };

                var state = {title:'',url:window.location.href.split("?")[0]};
                history.pushState(state, "HTML 5 History API simple demo", '?id='+goods_id);

                var current_id = data.id
                var name = data.name
                var albums = data.goods_albums;
                var sale_price = data.sale_price;
                var old_price = data.old_price;
                var photo_pic = data.shop.photo;
                var photos = [];
                photos.push(data.detail_photo);
                for (var i = 0; i < albums.length; i++) {
                    var photo = albums[i].photo;
                    photos.push(photo);
                }

                var albums = $('#img_wrap');
                var albums_str = "<div>";
                var active_str = '';

                for (var i = 0; i < photos.length; i++) {
                    var obj = photos[i];
                    albums_str += ' <a class="pic" data-href=' + obj + ' data-src=' + obj + '></a>';

                    if (i < 8) {
                        active_str += ' <li></li>';
                    }
                }

                albums.attr("data-width", photos.length);

                albums_str += "</div>"
                albums.html(albums_str);

                $('#slide').html(active_str);
                $('#pro_name').text(name);
                $('head title').text('<%= Setting.app_name%>-'+name);

                var price_html = '';

                if (old_price != null) {
                    price_html += '市场价:<del>￥' +Math.floor(old_price)  + '</del> ';
                }
                price_html += '<b>mm价: ￥' + Math.floor(sale_price) + '</b>';
                $('#price').html(price_html);

                $('#button').attr("data-src", goods_id);

                if(data.pre_id == null){
                    if(!$('#trigger_1').hasClass('hide')){
                        $('#trigger_1').addClass('hide')
                    }
                }else{
                    if($('#trigger_1').hasClass('hide')){
                        $('#trigger_1').removeClass('hide')
                    }

                    $('#trigger_1').attr("data-src", data.pre_id);
                }

                if(data.next_id == null){
                    if(!$('#trigger_2').hasClass('hide')){
                        $('#trigger_2').addClass('hide')
                    }
                }else{
                    if($('#trigger_2').hasClass('hide')){
                        $('#trigger_2').removeClass('hide')
                    }
                    $('#trigger_2').attr("data-src", data.next_id);
                }





                var direction = 'landscape';

                // 初始化图片slide
                var $wrapper = $('.img_wrap'),
                        $slide = $('.slide'),
                        length = $wrapper.data('width') * 1,
                        width = $wrapper.width(),
                        $body = $('body');


                $slide.find('li:nth-child(1)').addClass('active');  //提示点初始化
                $wrapper.children('div').css('width', width * length); //iscroll内层动态计算宽度

                $body.bind('touchstart', function (e) {
                    var point = e.touches[0],
                            startPageX = point.pageX,
                            startPageY = point.pageY;
                    $body.bind('touchmove', function (e) {
                        var point = e.touches[0],
                                movePageX = point.pageX,
                                movePageY = point.pageY;
                        if (Math.abs(movePageX - startPageX) < Math.abs(movePageY - startPageY)) {
                            direction = 'portrait';
                        } else {
                            direction = 'landscape';
                        }
                        $body.unbind('touchmove');
                    });
                });
                // 销毁原来的
                scroll.destroy();

                scroll = new iScroll($wrapper[0], {
                    x: (0),
                    currPageX: 0,
                    snap: true,
                    momentum: false,
                    vScroll: false,
                    hScrollbar: false,
                    onBeforeScrollStart: function () {
                    },
                    onBeforeScrollMove: function () {
                        if (direction == 'portrait') {
                            this._unbind('touchmove', window);
                            this._unbind('touchend', window);
                            this._unbind('touchcancel', window);
                            return;
                        }
                    },
                    onScrollMove: function (e) {
                        if (this.dirY == 0) e.preventDefault();
                    },
                    onScrollEnd: function () {
                        var ci = this.currPageX + 1;
                        indicator_update(ci);
                        load_img(ci);
                    }
                });
                $wrapper.find('a').bind('itap', function () {
                    var $this = $(this);
                    window.location.href = $this.data('href');
                });

                load_img(1)


            });
        });
//        商品详情点击事件
        $('.button').bind(click_event, function (e) {
            e.preventDefault();
            e.stopPropagation();
            var id =  $(this).data('src');
            window.location.href = '/home/order?id='+id;
        });

        var direction = 'landscape';

        // 初始化图片slide
        var $wrapper = $('.img_wrap'),
                $slide = $('.slide'),
                length = $wrapper.data('width') * 1,
                width = $wrapper.width(),
                $body = $('body');


        $slide.find('li:nth-child(1)').addClass('active');  //提示点初始化
        $wrapper.children('div').css('width', width * length); //iscroll内层动态计算宽度

        $body.bind('touchstart', function (e) {
            var point = e.touches[0],
                    startPageX = point.pageX,
                    startPageY = point.pageY;
            $body.bind('touchmove', function (e) {
                var point = e.touches[0],
                        movePageX = point.pageX,
                        movePageY = point.pageY;
                if (Math.abs(movePageX - startPageX) < Math.abs(movePageY - startPageY)) {
                    direction = 'portrait';
                } else {
                    direction = 'landscape';
                }
                $body.unbind('touchmove');
            });
        });

        scroll = new iScroll($wrapper[0], {
            x: (0),
            currPageX: 0,
            snap: true,
            momentum: false,
            vScroll: false,
            hScrollbar: false,
            onBeforeScrollStart: function () {
            },
            onBeforeScrollMove: function () {
                if (direction == 'portrait') {
                    this._unbind('touchmove', window);
                    this._unbind('touchend', window);
                    this._unbind('touchcancel', window);
                    return;
                }
            },
            onScrollMove: function (e) {
                if (this.dirY == 0) e.preventDefault();
            },
            onScrollEnd: function () {
                var ci = this.currPageX + 1;
                indicator_update(ci);
                load_img(ci);
            }
        });
        //幻灯提示点同步
        function indicator_update(x) {
            $slide.children('.active').removeClass('active');
            $slide.find('li:nth-child(' + x + ')').addClass('active');
        };
        function scroll_to(x) {
            var pageX = scroll.currPageX + x;
            scroll.scrollToPage(pageX, 0, 300);
        };
        $wrapper.find('a').bind('itap', function () {
            var $this = $(this);
            window.location.href = $this.data('href');
        });

        load_img(1)

        // 加载图片
        function load_img(index) {
            var selector = 'a:nth-child(' + index + ')',
                    $loading = $('#loading'),
                    $a = $wrapper.find(selector);
            if (!$a.find('img')[0]) {
                $a.html($loading.html());
                var img = document.createElement('img');
                if (DeviceInfo.width <= 640) {
                    img.width = '180';
                    img.height = '240';
                } else {
                    img.width = '240';
                    img.height = '320';
                }

                $(img).bind('load',function () {
                    $a.html(img);
                    setTimeout(function () {
                        $(img).addClass('load');
                    }, 10);
                }).bind('error', function () {
                            $a.html('');
                        });
                img.src = $a.data('src');
            }
        }

    })();


</script>



