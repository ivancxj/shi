<script>

    (function () {

        var click_event = DeviceInfo.browser == 'ie' ? 'click' : 'tap';

//        商品详情点击事件
        $('.button').bind(click_event, function (e) {
            e.preventDefault();
            e.stopPropagation();
            window.location.href = '/home/order?id=<%= @current_id%>';
        });

        var direction = 'landscape';

        // 初始化图片slide
        var $wrapper = $('.img_wrap'),
                $slide = $('.slide'),
                length = $wrapper.data('width') * 1,
                width = $wrapper.width(),
                $body = $('body');


        $slide.find('li:nth-child(1)').addClass('active');  //提示点初始化
        $wrapper.children('div').css('width', width * length); //iscroll内层动态计算宽度

        $body.bind('touchstart', function (e) {
            var point = e.touches[0],
                    startPageX = point.pageX,
                    startPageY = point.pageY;
            $body.bind('touchmove', function (e) {
                var point = e.touches[0],
                        movePageX = point.pageX,
                        movePageY = point.pageY;
                if (Math.abs(movePageX - startPageX) < Math.abs(movePageY - startPageY)) {
                    direction = 'portrait';
                } else {
                    direction = 'landscape';
                }
                $body.unbind('touchmove');
            });
        });

        var scroll = new iScroll($wrapper[0], {
            x: (0),
            currPageX: 0,
            snap: true,
            momentum: false,
            vScroll: false,
            hScrollbar: false,
            onBeforeScrollStart: function () {
            },
            onBeforeScrollMove: function () {
                if (direction == 'portrait') {
                    this._unbind('touchmove', window);
                    this._unbind('touchend', window);
                    this._unbind('touchcancel', window);
                    return;
                }
            },
            onScrollMove: function (e) {
                if (this.dirY == 0) e.preventDefault();
            },
            onScrollEnd: function () {
                var ci = this.currPageX + 1;
                indicator_update(ci);
                load_img(ci);
            }
        });
        //幻灯提示点同步
        function indicator_update(x) {
            $slide.children('.active').removeClass('active');
            $slide.find('li:nth-child(' + x + ')').addClass('active');
        };
        function scroll_to(x) {
            var pageX = scroll.currPageX + x;
            scroll.scrollToPage(pageX, 0, 300);
        };
        $wrapper.find('a').bind('itap', function () {
            var $this = $(this);
            window.location.href = $this.data('href');
        });

        load_img(1)

        // 加载图片
        function load_img(index) {
            var selector = 'a:nth-child(' + index + ')',
                    $loading = $('#loading'),
                    $a = $wrapper.find(selector);
            if (!$a.find('img')[0]) {
                $a.html($loading.html());
                var img = document.createElement('img');
                if(DeviceInfo.width <= 640){
                    img.width = '150';
                    img.height = '200';
                }else{
                    img.width = '210';
                    img.height = '280';
                }

                $(img).bind('load',function () {
                    $a.html(img);
                    setTimeout(function () {
                        $(img).addClass('load');
                    }, 10);
                }).bind('error', function () {
                            $a.html('');
                        });
                img.src = $a.data('src');
            }
        }

    })();


</script>



