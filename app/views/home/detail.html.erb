<section id='product'>
  <div class="product_img">
    <div id='img_wrap' class="img_wrap" data-width="<%= (@goods["goods_albums"].length + 1) %>">
      <div>
        <a class="pic" data-href="<%= @goods['detail_photo'] %>" data-src="<%= @goods['detail_photo'] %>">
        </a>
        <% @goods['goods_albums'].each do |album| %>
            <a data-href="<%= album['photo'] %>" class="pic" data-src="<%= album['photo'] %>">
            </a>
        <% end %>
      </div>
    </div>

    <div class="trigger">
      <% if @pre_id %>
          <a id='trigger_1' data-src="<%= @pre_id %>" class="prev"><img src="<%= asset_path('prev.png') %>" width="48px" height="80px"/></a>
      <% else%>
          <a id='trigger_1' data-src="<%= @pre_id %>" class="prev hide"><img src="<%= asset_path('prev.png') %>" width="48px" height="80px"/></a>
      <% end %>

      <% if @next_id %>
          <a id='trigger_2' data-src="<%= @next_id %>" class="next"><img src="<%= asset_path('next.png') %>" width="48px" height="80px"/></a>
      <% else%>
          <a id='trigger_2' data-src="<%= @next_id %>" class="next hide"><img src="<%= asset_path('next.png') %>" width="48px" height="80px"/></a>
      <% end %>

    </div>
    <div style="clear:both;"></div>
    <!-- active -->
    <div id='slide' class="slide">
      <li></li>
      <% @goods["goods_albums"].each_with_index do |album, index| %>
          <% if index < 8 %>
              <li></li>
          <% end %>
      <% end %>
    </div>


  </div>

  <!-- 详情 -->
  <p id='pro_name' class="pro_name"><%= @goods['name'] %> </p>
  <!-- safari 不超出屏幕 不会隐藏 地址栏-->
  <br/>
  <br/>
  <br/>
  <br/>
  <br/>
  <br/>


  <div class="extra">
    <p id='price' class="price">
      <% if @goods["old_price"] %>
          市场价:
          <del>￥<%= @goods["old_price"].to_i %></del>
      <% end %>

      <b>mm价: ￥<%= @goods["sale_price"].to_i %></b>
    </p>
    <p class="go-order">
      <button id='button' data-src="<%= @current_id%>" class="button pink">点击体验试穿</button>
    </p>
  </div>

