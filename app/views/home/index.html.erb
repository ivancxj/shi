<script type="text/javascript">
    (function () {
        var slide_style = function () {
            var width = $(window).width() - 8;
            var height = width / 2;
            var width2 = width * 0.95;
            var height2 = width * 22 / 72;
            var style = [
                '<style type="text/css">',
                '.slide_width{width:' + width + 'px !important;}',
                '.slide_height{height:' + height + 'px !important;}',
                '.slide_width2{width:' + width2 + 'px !important;}',
                '.slide_height2{height:' + height2 + 'px !important;}',
                '</style>'
            ]
            $('head').append(style.join(' '));
        };
        slide_style();
    })();
</script>

